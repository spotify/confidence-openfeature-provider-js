    "lint": "eslint ./packages/**/src/**/*.{tsx,ts}",
    "test": "jest",
    "prepare": "husky install",
    "cm": "git-cz",
    "release": "lerna version",
    "publish-if-missing": "lerna publish from-package --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
