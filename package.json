{
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn build:types && yarn build:esm && yarn build:cjs",
    "build:cjs": "lerna run build:cjs",
