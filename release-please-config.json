    },
    {
      "type": "deps",
      "section": "📦 Dependencies"
    },
    {
      "type": "ci",
      "hidden": true,
      "section": "🚦 CI"
    },
    {
      "type": "refactor",
      "section": "🔄 Refactoring"
    },
    {
      "type": "revert",
      "section": "🔙 Reverts"
    },
    {
      "type": "style",
      "hidden": true,
      "section": "🎨 Styling"
    },
    {
      "type": "test",
      "hidden": true,
      "section": "🧪 Tests"
    }
